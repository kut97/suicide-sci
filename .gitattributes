# Default: normalize all text to LF on commit and checkout
* text=auto eol=lf

# Code (R + common)
*.R      text eol=lf
*.r      text eol=lf
*.Rmd    text eol=lf
*.Rproj  text eol=lf
*.py     text eol=lf
*.sh     text eol=lf
*.bat    text eol=lf
*.ipynb  text eol=lf

# Data / config / docs
*.csv    text eol=lf
*.tsv    text eol=lf
*.json   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.txt    text eol=lf
*.md     text eol=lf

# LaTeX
*.tex    text eol=lf
*.bib    text eol=lf
*.cls    text eol=lf
*.bst    text eol=lf

# Binary (no EOL conversion)
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.pdf    binary
*.zip    binary
*.gz     binary
*.tar    binary
*.7z     binary
*.pptx   binary
*.docx   binary
*.xlsx   binary
*.rds    binary
*.Rds    binary
*.RData  binary
